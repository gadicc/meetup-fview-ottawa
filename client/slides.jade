template(name='slide8')
  +Surface size='[900, undefined]' align='[.5, .5]' origin='[.5, .5]'
    h2 JavaScript vs Markup: StateModifier Animation
    table(style="width: 100%")
      tr
        td(valign="top",style="width: 50%; padding-right: 2px")
          span(style="font-size: 48px; vertical-align: middle")
            | VANILLA
            img(src="/img/famous_logo.jpg",style="height: 50px; vertical-align: middle")
          +prism(lang="javascript")
            | var mainContext = Engine.createContext();
            | 
            | var surface = new Surface({
            |   size: [100, 100],
            |   properties: { background: '#FA5C4F', etc }
            | });
            | 
            | var stateModifier = new StateModifier();
            | 
            | mainContext.add(stateModifier).add(surface);
            | 
            | stateModifier.setTransform(
            |   Transform.translate(100, 300, 0),
            |   { duration : 1000, curve: Easing.inOutBack }
            | );
        td(valign="top",style="width: 50%; padding-left: 2px")
          span(style="font-size: 48px; vertical-align: middle;")
            img(src="/img/meteor_famous_view_logo.svg",style="height: 50px; vertical-align: middle; position: relative; top: -12px")
            | FAMOUS-VIEWS
          +snippet(lang="spacebars")
            | &lt;body>
            |   {{dstache}}famousContext id="mainCtx"}}
            |     {{dstache}}>Surface template="mySurface" modifier="StateModifier"
            |       size="[100,100]" style="background: '#FA5c4F'; etc"}}
            |   {{dstache}}/famousContext}}
            | &lt;/body>
            | 
            | &lt;template name="mySurface">&lt;/template>
          else
            if currentLang "jade"
              | body
              |   +famousContext id="mainCtx"
              |     +Surface template="mySurface" modifier="StateModifier"
              | 
              | template(name="mySurface")
              |   | 
          +snippet(lang="js")
            | Template.mySurface.onRendered(function() {
            |   FView.from(this).modifier.setTransform(
            |     Transform.translate(100, 300, 0),
            |     { duration : 1000, curve: Easing.inOutBack }
            |   );
            | });
    .footer gadicc

